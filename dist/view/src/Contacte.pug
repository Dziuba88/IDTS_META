// SECTION 
section#contacte.section
  .container
    .row.middle
      .col.md-6.contacts--info
        h2.section--header
          span Contacte
          svg: use(xlink:href="#h2bg")
        .section--body
          h3 SC MAI SERV SRL
          ul.contacts--list
            li
              svg: use(xlink:href="#adress")
              span Str. Vatra Luminoasa 108, Bucuresti, Romania, 21919
            li
              svg: use(xlink:href="#phone")
              span: a(href="tel:+40722235511") + 40 722 235 511
            li
              svg: use(xlink:href="#fax")
              span: a(href="tel:+40722235511") + 40 21 456 1847
            li
              svg: use(xlink:href="#facebook")
              span: a(href="http://facebook.com" target="_blank") Facebook
      .col.md-6
        form.contacts--form(data-validate)
          .row
            .col.lg-6.md-12.sm-6
              .form--row
                label Nume
                input(type="text", name="contact-name", required)
            .col.lg-6.md-12.sm-6
              .form--row
                label E-mail
                input(type="email", name="contact-mail", required)
          .form--row
            label Comentariu
            textarea(cols="30", rows="10", name="contact-text", required)
          .form--row
            .captcha--block
              .g-recaptcha(data-sitekey="6LcePAATAAAAAGPRWgx90814DTjgt5sXnNbV5WaW")
              script(src='https://www.google.com/recaptcha/api.js')
          button.btn.btn--summit(type="submit") Trimite
          .message.success 
            strong Multumesc! 
            span Mesajul dvs. a fost trimis cu succes.
          .message.danger 
            strong Eroare! 
            span Mesajul dvs. nu a fost trimis.




  .map: #contacts--map
